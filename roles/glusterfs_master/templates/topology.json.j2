{
  "clusters": [
    {
      "nodes": [
        {% for host in groups['glusterfs'] %}{
          "node": {
            "hostnames": {
              "manage": [
                "{{ host }}"
              ],
              "storage": [
                "{{ hostvars[host]['ansible_default_ipv4']['address'] }}"
              ]
            },
            "zone": 1
          },
          "devices": [
            "/dev/vdb"
          ]
        }{% if not loop.last %},{% endif %}{% endfor %}
      ]
    }
  ]
}
